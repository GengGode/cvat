{
    "name": "C++ Codespace",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-vscode.cpptools-extension-pack"
    ],
    "forwardPorts": [],
    "postCreateCommand": "cmake -B build && cmake --build build",
    "remoteUser": "vscode"
}
